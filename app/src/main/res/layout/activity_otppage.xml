<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otppage">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/otp_icon"
        app:tint="@color/green"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter OTP sent to your phone number"
        android:layout_gravity="center_vertical"
        android:letterSpacing="0.08"
        android:paddingStart="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp">
        <EditText
            android:id="@+id/edit_otp1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="number"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />
        <EditText
            android:id="@+id/edit_otp2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="number"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:maxLength="1"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />

        <EditText
            android:id="@+id/edit_otp3"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />

        <EditText
            android:id="@+id/edit_otp4"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />

        <EditText
            android:id="@+id/edit_otp5"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="number"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:maxLength="1"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />

        <EditText
            android:id="@+id/edit_otp6"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:inputType="number"
            android:textSize="@dimen/_22ssp"
            android:gravity="center"
            android:maxLength="1"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/otpedit"
            android:elevation="5dp" />

    </LinearLayout>
    <Button
        android:id="@+id/next_btn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_rounded_corner"
        android:backgroundTint="@color/green"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

